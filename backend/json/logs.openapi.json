{
    "openapi": "3.0.3",
    "info": {
        "title": "MUN Logs API",
        "version": "1.0.0",
        "description": "Audit log endpoints for querying and purging database activity logs."
    },
    "paths": {
        "/api/logs": {
            "get": {
                "summary": "List logs",
                "description": "Returns paginated log entries filtered by operator, time range, or action. Requires admin role.",
                "operationId": "listLogs",
                "parameters": [
                    {
                        "name": "actorId",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "description": "Filter by operator user id"
                    },
                    {
                        "name": "action",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Filter by action verb (SELECT/INSERT/LOG_PURGE/etc.)"
                    },
                    {
                        "name": "table",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Restrict to a specific database table"
                    },
                    {
                        "name": "start",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "description": "Start of timestamp range (ISO 8601)"
                    },
                    {
                        "name": "end",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "description": "End of timestamp range (ISO 8601)"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "minimum": 1
                        },
                        "description": "Page number"
                    },
                    {
                        "name": "pageSize",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 25,
                            "minimum": 1,
                            "maximum": 100
                        },
                        "description": "Page size"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Log collection",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LogCollection"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Requires admin role"
                    }
                }
            },
            "delete": {
                "summary": "Clear logs",
                "description": "Deletes all log entries. A synthetic LOG_PURGE record is written after the purge completes.",
                "operationId": "purgeLogs",
                "responses": {
                    "200": {
                        "description": "Deletion summary",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "deleted": {
                                            "type": "integer"
                                        }
                                    },
                                    "required": [
                                        "deleted"
                                    ]
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Requires admin role"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LogActor": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    }
                }
            },
            "LogRecord": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "action": {
                        "type": "string"
                    },
                    "targetTable": {
                        "type": "string",
                        "nullable": true
                    },
                    "targetId": {
                        "type": "integer",
                        "nullable": true
                    },
                    "meta": {
                        "type": "object",
                        "additionalProperties": true,
                        "nullable": true
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "actor": {
                        "$ref": "#/components/schemas/LogActor"
                    }
                },
                "required": [
                    "id",
                    "action"
                ]
            },
            "LogCollection": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/LogRecord"
                        }
                    },
                    "total": {
                        "type": "integer"
                    },
                    "page": {
                        "type": "integer"
                    },
                    "pageSize": {
                        "type": "integer"
                    }
                },
                "required": [
                    "items",
                    "total",
                    "page",
                    "pageSize"
                ]
            }
        }
    }
}
