{
    "openapi": "3.0.3",
    "info": {
        "title": "MUN System Messages API",
        "version": "1.0.0",
        "description": "OpenAPI document describing the message sending endpoints."
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local PHP development server"
        }
    ],
    "paths": {
        "/api/messages": {
            "get": {
                "summary": "List messages available to the current user",
                "operationId": "listMessages",
                "x-apifox-folder": "messages",
                "security": [
                    {
                        "bearerAuth": []
                    },
                    {
                        "cookieAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 1
                        }
                    },
                    {
                        "name": "pageSize",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 100,
                            "default": 20
                        }
                    },
                    {
                        "name": "target",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "all",
                                "everyone",
                                "delegate",
                                "committee",
                                "dias"
                            ]
                        }
                    },
                    {
                        "name": "committeeId",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Message list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MessageListResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            },
            "post": {
                "summary": "Send a message",
                "operationId": "sendMessage",
                "x-apifox-folder": "messages",
                "security": [
                    {
                        "bearerAuth": []
                    },
                    {
                        "cookieAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SendMessageRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Message sent successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SendMessageResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request data"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "MessageListResponse": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/MessageItem"
                        }
                    },
                    "total": {
                        "type": "integer"
                    },
                    "page": {
                        "type": "integer"
                    },
                    "pageSize": {
                        "type": "integer"
                    },
                    "recipients": {
                        "$ref": "#/components/schemas/RecipientsPayload"
                    },
                    "allowedTargets": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "everyone",
                                "delegate",
                                "committee",
                                "dias"
                            ]
                        }
                    }
                }
            },
            "MessageItem": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "target": {
                        "type": "string"
                    },
                    "targetId": {
                        "type": "integer",
                        "nullable": true
                    },
                    "channel": {
                        "type": "string"
                    },
                    "committee": {
                        "$ref": "#/components/schemas/CommitteeRef"
                    },
                    "content": {
                        "type": "string"
                    },
                    "time": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "sender": {
                        "$ref": "#/components/schemas/SenderRef"
                    },
                    "targetMeta": {
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            },
            "CommitteeRef": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                }
            },
            "SenderRef": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    }
                }
            },
            "RecipientsPayload": {
                "type": "object",
                "properties": {
                    "committees": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CommitteeRef"
                        }
                    },
                    "delegates": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/DelegateRef"
                        }
                    }
                }
            },
            "DelegateRef": {
                "type": "object",
                "properties": {
                    "delegateId": {
                        "type": "integer"
                    },
                    "userId": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "committeeId": {
                        "type": "integer"
                    },
                    "committeeName": {
                        "type": "string"
                    },
                    "country": {
                        "type": "string"
                    }
                }
            },
            "SendMessageRequest": {
                "type": "object",
                "required": [
                    "target",
                    "content"
                ],
                "properties": {
                    "target": {
                        "type": "string",
                        "enum": [
                            "everyone",
                            "delegate",
                            "committee",
                            "dias"
                        ]
                    },
                    "targetId": {
                        "type": "integer",
                        "nullable": true
                    },
                    "committeeId": {
                        "type": "integer",
                        "nullable": true
                    },
                    "content": {
                        "type": "string",
                        "maxLength": 2000
                    }
                }
            },
            "SendMessageResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "$ref": "#/components/schemas/MessageItem"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            },
            "cookieAuth": {
                "type": "apiKey",
                "in": "cookie",
                "name": "mun_session"
            }
        }
    }
}