{
    "name": "gentle-lijie/mun-backend-php",
    "description": "PHP rewrite of the MUN control backend APIs",
    "type": "project",
    "require": {
        "php": "^8.2|^8.3|^8.4|^8.5",
        "vlucas/phpdotenv": "^5.6",
        "symfony/http-foundation": "^7.1",
        "nikic/fast-route": "^1.3",
        "illuminate/database": "^11.0",
        "illuminate/events": "^11.0",
        "illuminate/support": "^11.0",
        "nesbot/carbon": "^3.5",
        "ramsey/uuid": "^4.7",
        "league/csv": "^9.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "fakerphp/faker": "^1.23",
        "squizlabs/php_codesniffer": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.90"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "lint": "phpcs app/ --standard=PSR12",
        "lint:fix": "phpcbf app/ --standard=PSR12",
        "format": "php-cs-fixer fix app/ --rules=@PSR12",
        "format:check": "php-cs-fixer fix app/ --rules=@PSR12 --dry-run"
    }
}
